{
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "types": [
      "node", "jest"
    ]
  },
  "include": [
    "src/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "src/*/files/**/*"
  ]
}
